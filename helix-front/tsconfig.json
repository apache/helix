{
  "compileOnSave": false,
  "exclude": ["**/*.cy.ts", "**/*.spec.ts"],
  "compilerOptions": {
    "types": ["node"],
    "importHelpers": false,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2015",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["node_modules/@types/*"],
    "lib": ["es2016", "dom"],
    "module": "es2020"
  }
}
